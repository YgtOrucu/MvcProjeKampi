@using EntityLayer.Concreate
@model List<Admin>
@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* Modal arka plan blur efekti */
    .modal.fade .modal-dialog {
        transition: transform .3s ease-out;
    }

    .modal-backdrop.show {
        backdrop-filter: blur(4px);
    }

    /* Modal kutusu */
    .modal-content {
        border-radius: 18px !important;
        border: none;
        background: #ffffff;
        box-shadow: 0 10px 35px rgba(0,0,0,0.12);
    }

    /* Başlık */
    .modal-title {
        font-weight: 600;
        color: #333;
    }
    /* Button */
    .btn-primary {
        background: #7b57ff;
        border: none;
        border-radius: 10px;
        padding: 6px 14px;
        transition: all .2s ease;
        margin: 10px 0;
    }

        .btn-primary:hover {
            background: #6a46f7;
            transform: translateY(-1px);
        }
</style>

<div class="table-card">
    <div class="title">Admin List</div>

    <div class="table-wrapper">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>UserName</th>
                    <th>Password</th>
                    <th>RoleType</th>
                    <th>Status</th>
                    <th>Edit</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    string BadgeColor = "";
                    switch (item.Role.RoleType)
                    {
                        case "Admin":
                            BadgeColor = "badge-success";
                            break;
                        case "Kullanıcı":
                            BadgeColor = "badge-warning";
                            break;
                        case "Admin Yardımcısı":
                            BadgeColor = "badge-primary";
                            break;
                    }
                    <tr>
                        <td>@item.AdminID</td>
                        <td>@item.UserName</td>
                        <td>@item.Password</td>
                        <td><span class="badge @BadgeColor">@item.Role.RoleType</span></td>
                        <td>
                            @if ((bool)item.AdminStatus)
                            {
                                <span class="badge bg-success text-sm">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger text-sm">Pasive</span>
                            }
                        </td>
                        <td>
                            <a href="~/Admin/AdminEdit/@item.AdminID"
                               class="btn btn-warning btn-sm">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button class="btn btn-primary" data-toggle="modal" data-target="#modal1">Add</button>
    </div>
</div>

<div class="modal fade" id="modal1" tabindex="-1" aria-labelledby="modal1Label" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header">
                <h2 class="modal-title" id="modal1Label" style="margin:0 0 0 9rem">Add Admin</h2>
            </div>

            <form method="post" action="~/Admin/AdminAdd">
                <div class="modal-body">

                    <div class="mb-3">
                        <label for="UserName" class="form-label">UserName</label>
                        <input type="text" name="UserName" id="UserName" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label for="Password" class="form-label">Password</label>
                        <input type="text" name="Password" id="Password" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label for="RoleID" class="form-label">Role Type</label>
                        <input type="text" name="RoleID" id="RoleID" class="form-control">
                    </div>

                    <label for="AdminStatus" class="form-label">Status</label>
                    <div class="form-check-inline">
                        <div class="form-check">
                            <input class="form-check-input" id="durumAktif" name="AdminStatus" type="radio" value="True">
                            <label class="form-check-label" for="durumAktif">Active</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" id="durumPasif" name="AdminStatus" type="radio" value="False">
                            <label class="form-check-label" for="durumPasif">Pasive</label>
                        </div>
                    </div>

                    <br />
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary btn-sm">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>


