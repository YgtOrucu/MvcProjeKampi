@model EntityLayer.Concreate.Admin
@{
    ViewBag.Title = "AdminEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="title">Admin Edit</div>
<form action="~/Admin/AdminUpdate" method="post" class="nice-form">
    <div class="field">
        <label for="AdminID">About ID</label>
        @Html.TextBoxFor(x => x.AdminID, new { @class = "input", @readonly = "readonly" })
    </div>

    <div class="field">
        <label for="UserName">UserName</label>
        @Html.TextBoxFor(x => x.UserName, new { @class = "input" })
    </div>

    <div class="field">
        <label for="Password">Password</label>
        @Html.TextBoxFor(x => x.Password, new { @class = "input" })
    </div>

    <div class="field">
        <label for="RoleID">Role Type</label>
        @Html.TextBoxFor(x => x.RoleID, new { @class = "input" })
    </div>

    <div class="field">
        <label for="AdminStatus">Status</label>

        <div class="radio-group">
            <label class="radio">
                @Html.RadioButtonFor(x => x.AdminStatus, true)
                <span>Active</span>
            </label>

            <label class="radio">
                @Html.RadioButtonFor(x => x.AdminStatus, false)
                <span>Pasive</span>
            </label>
        </div>

    </div>
    <div class="filter">
        <button type="submit" class="submit-btn">Admin Edit</button>
        <a href="~/Admin/Admin" class="btn-danger">Return Admin Page</a>
    </div>
</form>


