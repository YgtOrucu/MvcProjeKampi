@model EntityLayer.Concreate.Heading
@{
    ViewBag.Title = "HeadingEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="title">Heading Edit</div>
<form action="~/Admin/HeadingUpdate" method="post" class="nice-form">
    <div class="field">
        @Html.HiddenFor(x => x.HeadingID, new { @class = "input", @readonly = "readonly" })
    </div>

    <div class="field">
        <label for="HeadingName">Heading Name</label>
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "input" })
    </div>

    <div class="field">
        <label for="CategoryID">Category Name</label>
        @Html.DropDownListFor(x => x.CategoryID, (IEnumerable<SelectListItem>)ViewBag.Categories, new { @class = "input" })
    </div>

    <div class="field">
        <label for="HeadingStatus">Heading Status</label>

        <div class="radio-group">
            <label class="radio">
                @Html.RadioButtonFor(x => x.HeadingStatus, true)
                <span>Active</span>
            </label>

            <label class="radio">
                @Html.RadioButtonFor(x => x.HeadingStatus, false)
                <span>Pasive</span>
            </label>
        </div>

    </div>
    <div class="filter">
        <button type="submit" class="submit-btn">Heading Edit</button>
        <a href="~/Admin/Heading" class="btn-danger">Return Heading Page</a>
    </div>
</form>

