<div class="card">
    <div class="card-header">
        <h3 class="card-title">Folders</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        <ul class="nav nav-pills flex-column">
            <li class="nav-item active">
                <a href="~/Admin/Contact" class="nav-link">
                    <i class="fas fa-file-contract"></i> User Messages
                    <span class="badge bg-danger float-right">@ViewBag.UserMessageCount</span>
                </a>
            </li>

            <li class="nav-item">
                <a href="~/Admin/ContactandMessage" class="nav-link">
                    <i class="fas fa-inbox"></i> Inbox
                    <span class="badge bg-warning float-right">@ViewBag.ınboxcount</span>
                </a>
            </li>

            <li class="nav-item">
                <a href="~/Admin/SendBoxForAdmin" class="nav-link">
                    <i class="far fa-envelope"></i> Sent
                    <span class="badge badge-success float-right">@ViewBag.sentcount</span>
                </a>
            </li>

            <li class="nav-item">
                <a href="~/Admin/ContactDeletedPage" class="nav-link">
                    <i class="far fa-trash-alt"></i> Trash
                </a>
            </li>

        </ul>
    </div>
</div>
