@using EntityLayer.Concreate
@model List<Message>

@{
    ViewBag.Title = "SearchSendMail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <style>
        .formClass {
            display: flex;
            align-items: flex-end;
            column-gap: 20px;
            width: 80%;
            float: inline-end;
        }
    </style>
</head>

<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="row">
            <div class="col-md-3">
                <a href="~/Admin/NewMessage" class="btn btn-primary btn-block mb-3">New Message</a>
                @Html.Action("LeftBarArea", "Admin")
            </div>
            <div class="col-md-9">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Inbox</h3>
                        <div class="card-tools">
                            <a href="~/Admin/SendBoxForAdmin" class="btn btn-primary btn-xs" style="width:30px"><i class="fas fa fa-sign-out-alt"></i></a> 
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive mailbox-messages">
                            <table class="table table-hover table-striped">
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="icheck-primary">
                                                    <input type="checkbox" value="" id="check1">
                                                    <label for="check1"></label>
                                                </div>
                                            </td>
                                            <td class="mailbox-star"><a href="#"><i class="fas fa-star text-warning"></i></a></td>
                                            <td class="mailbox-name"><a href="~/Admin/ContactandMessageDetails/@item.MessageID">@item.SenderMail</a></td>
                                            <td class="mailbox-subject">
                                                <b>@item.MessageSubject</b> - @item.MessageContent.Substring(0, 30) ...
                                            </td>
                                            <td class="mailbox-attachment"></td>
                                            <td class="mailbox-read-time">@item.MessageDate.ToString("dd MMM. yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>




