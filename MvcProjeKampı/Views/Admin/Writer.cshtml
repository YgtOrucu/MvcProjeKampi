@using EntityLayer.Concreate
@model List<Writer>
@{
    ViewBag.Title = "Writer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card card-solid">
    <div class="WriterTitle">Writer List</div>
    <div class="card-body pb-0">
        <div class="row d-flex align-items-stretch">
            @foreach (var item in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                    <div class="card bg-light">
                        <div class="card-header text-muted border-bottom-0" style="display: flex;align-items: center;">
                            <div style="margin-left:auto">
                                @if (item.WriterStatus)
                                {
                                    <span class="badge success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge danger ">Pasif</span>
                                }
                            </div>
                        </div>
                        <div class="card-body pt-0">
                            <div class="row">
                                <div class="col-7">
                                    <h2 class="lead"><b>@item.WriterName @item.WriterSurname</b></h2>
                                    <p class="text-muted text-sm"><b>About: </b> @item.WriterAbout. </p>
                                    <ul class="ml-4 mb-0 fa-ul text-muted">
                                        <li class="small"><span class="fa-li"><i class="fas fa-envelope"></i></span>@item.WriterMail</li>
                                    </ul>
                                </div>
                                <div class="col-5 text-center">
                                    <img src="~/AdminThema/AdminLTE-3.0.4/dist/img/user1-128x128.jpg" alt="" class="img-circle img-fluid">
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="text-right">
                                <a href="#" class="btn btn-sm bg-teal">
                                    Headings
                                </a>
                                <a href="/Admin/WriterEdit/@item.WriterID" class="btn btn-warning btn-sm">Edit</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <a href="/Admin/WriterAdd" class="add-btn" style="width:10%;">Add Writer</a>
</div>