
@{
    ViewBag.Title = "AuthorizationErrorPage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Access Denied</title>
    <style>
      
        .card {
            display:contents;
            background: rgba(255, 255, 255, 0.06);
            backdrop-filter: blur(12px);
            border-radius: 20px;
            padding: 48px 40px;
            text-align: center;
            box-shadow: 0 30px 80px rgba(0, 0, 0, 0.4);
        }

        .emoji {
            font-size: 56px;
            margin-bottom: 12px;
        }

        h1 {
            margin: 0;
            font-size: 56px;
            font-weight: 800;
            letter-spacing: -1px;
        }

        h2 {
            margin: 8px 0 16px;
            font-size: 22px;
            font-weight: 600;
        }

        p {
            margin: 0 0 28px;
            font-size: 15px;
            line-height: 1.6;
            color: #cbd5f5;
        }

        .code {
            margin-top: 18px;
            font-size: 12px;
            opacity: 0.6;
        }
    </style>
</head>
<body>
    <div class="card">
        <div class="emoji">🚫</div>
        <h1>404</h1>
        <h2>Oops! Access Denied</h2>
        <p>
            You don’t have permission to open this page.<br />
            Please contact your administrator if you think this is a mistake.
        </p>
        <div class="code">Error code: 404 – Forbidden</div>
    </div>
</body>
</html>


