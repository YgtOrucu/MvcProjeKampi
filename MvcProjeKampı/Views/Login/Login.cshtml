
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Login | MVC Camp</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Apple tarzı font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Inter', sans-serif;
            background: radial-gradient(circle at top left, #f5f5f7, #d2d2d7);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            /* Apple tarzi hafif noisy texture */
            background-image: radial-gradient(rgba(255,255,255,0.25) 1px, transparent 0), radial-gradient(rgba(255,255,255,0.18) 1px, transparent 0);
            background-size: 3px 3px, 5px 5px;
            background-position: 0 0, 0 0;
        }

        .login-card {
            width: 400px;
            padding: 40px 35px;
            background: rgba(255, 255, 255, 0.55);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border-radius: 22px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.15);
            border: 1px solid rgba(255,255,255,0.35);
            color: #111;
        }

            .login-card h2 {
                text-align: center;
                margin-bottom: 12px;
                font-weight: 600;
                letter-spacing: -0.5px;
            }

            .login-card p {
                text-align: center;
                color: #555;
                margin-bottom: 25px;
                font-size: 14px;
            }

        .form-group {
            margin-bottom: 20px;
            position: relative;
        }

            .form-group input {
                width: 77%;
                padding: 14px 46px;
                border-radius: 14px;
                border: 1px solid #d2d2d7;
                background: #fbfbfd;
                color: #111;
                font-size: 15px;
                transition: 0.2s;
            }

                .form-group input:focus {
                    border-color: #007aff;
                    box-shadow: 0 0 0 3px rgba(0,122,255,0.2);
                    outline: none;
                }

            .form-group i {
                position: absolute;
                top: 50%;
                left: 16px;
                transform: translateY(-50%);
                color: #666;
                font-size: 17px;
            }

        .login-btn {
            width: 100%;
            padding: 14px;
            background: #007aff;
            border: none;
            border-radius: 12px;
            color: #fff;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: 0.25s;
            letter-spacing: 0.3px;
        }

            .login-btn:hover {
                background: #0b70f5;
                box-shadow: 0 6px 16px rgba(0,122,255,0.35);
                transform: translateY(-2px);
            }

        .error-message {
            margin-bottom: 15px;
            padding: 10px;
            border-radius: 12px;
            background: rgba(255,70,70,0.15);
            color: #a33;
            font-size: 14px;
            border: 1px solid rgba(255,70,70,0.2);
        }
    </style>
</head>

<body>

    <div class="login-card">

        <h2>Admin Login</h2>
        <p>Welcome back. Please sign in.</p>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="error-message">
                @Html.ValidationSummary()
            </div>
        }

        <form action="~/Login/LoginSıngIn" method="post">
            <div class="form-group">
                <i class="fa fa-user"></i>
                <input type="text" name="UserName" placeholder="Username">
            </div>

            <div class="form-group">
                <i class="fa fa-lock"></i>
                <input type="password" name="Password" placeholder="Password">
            </div>

            <button class="login-btn">Login</button>
        </form>

    </div>

</body>
</html>
