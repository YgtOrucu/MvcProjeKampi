
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Login | MVC Camp</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: 'Inter', sans-serif;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            background: radial-gradient(circle at top left, #f5f5f7, #d2d2d7);
            background-image: radial-gradient(rgba(255,255,255,0.25) 1px, transparent 0), radial-gradient(rgba(255,255,255,0.18) 1px, transparent 0);
            background-size: 3px 3px, 5px 5px;
        }

        .page-wrapper {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
        }

        .login-card {
            width: 400px;
            padding: 42px 36px;
            background: rgba(255, 255, 255, 0.6);
            backdrop-filter: blur(22px);
            border-radius: 22px;
            box-shadow: 0 25px 70px rgba(0,0,0,0.18);
            border: 1px solid rgba(255,255,255,0.4);
            color: #111;
        }

            .login-card h2 {
                text-align: center;
                margin-bottom: 10px;
                font-weight: 600;
                letter-spacing: -0.6px;
            }

            .login-card p {
                text-align: center;
                color: #555;
                margin-bottom: 28px;
                font-size: 14px;
            }

        .form-group {
            margin-bottom: 20px;
            position: relative;
        }

            .form-group input {
                width: 100%;
                padding: 14px 46px;
                border-radius: 14px;
                border: 1px solid #d2d2d7;
                background: #fbfbfd;
                font-size: 15px;
                transition: 0.2s;
            }

                .form-group input:focus {
                    border-color: #007aff;
                    box-shadow: 0 0 0 3px rgba(0,122,255,0.2);
                    outline: none;
                }

            .form-group i {
                position: absolute;
                top: 50%;
                left: 16px;
                transform: translateY(-50%);
                color: #666;
            }

        .login-btn {
            width: 100%;
            padding: 14px;
            background: linear-gradient(135deg, #007aff, #005edb);
            border: none;
            border-radius: 14px;
            color: #fff;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: 0.25s;
        }

            .login-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(0,122,255,0.35);
            }

        .error-message {
            margin-bottom: 18px;
            padding: 12px;
            border-radius: 14px;
            background: rgba(255,70,70,0.15);
            color: #a33;
            font-size: 14px;
            border: 1px solid rgba(255,70,70,0.25);
        }

        footer {
            width: 100%;
            padding: 18px 10px;
            text-align: center;
            font-size: 13px;
            color: #555;
            background: rgba(255,255,255,0.35);
            backdrop-filter: blur(10px);
            border-top: 1px solid rgba(255,255,255,0.4);
        }

            footer a {
                color: #007aff;
                text-decoration: none;
                font-weight: 500;
            }
    </style>
</head>
<body>

    <div class="page-wrapper">
        <div class="login-card">
            <h2>Admin Login</h2>
            <p>Welcome back. Please sign in.</p>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="error-message">
                    @Html.ValidationSummary()
                </div>
            }

            <form action="~/Login/LoginSıngIn" method="post">
                <div class="form-group">
                    <i class="fa fa-user"></i>
                    <input type="text" name="UserName" placeholder="Username" />
                </div>

                <div class="form-group">
                    <i class="fa fa-lock"></i>
                    <input type="password" name="Password" placeholder="Password" />
                </div>

                <button class="login-btn">Login</button>
            </form>
        </div>
    </div>

    <footer>
        <strong>Telif Hakkı &copy; 2025 <a href="">Muhsin Yiğit Örücü</a>.</strong>
        Tüm Hakları saklıdır.
    </footer>

</body>
</html>

