@using EntityLayer.Concreate
@model List<Content>
<style>

    .timeline-item {
        background: #f9f9f9;
        border-radius: 8px;
        padding: 0.8rem; /* daha az padding */
        margin-left: auto;
        margin-bottom: 4rem; /* kartlar arası mesafe küçültüldü */
        box-shadow: 0 2px 6px rgba(0,0,0,0.08);
        border-left: 4px solid #0056B3;
        transition: transform 0.2s ease;
        max-width: 100%; /* genişliği sınırladık */
    }

        .timeline-item:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.12);
        }

    .timeline-header {
        display: flex;
        align-items: center;
        margin-bottom: 0.5rem;
    }

        .timeline-header i {
            background: #0056B3;
            color: #fff;
            border-radius: 50%;
            padding: 6px; /* ikon küçültüldü */
            font-size: 14px;
            margin-right: 0.6rem;
        }

    .writer-name {
        color: #0b0d2e;
        font-weight: bold;
        font-size: 0.9rem; /* yazı boyutu küçültüldü */
    }

    .heading {
        display: block;
        color: #0056B3;
        font-weight: bold;
        margin-bottom: 0.6rem;
        font-size: 1rem;
    }

    .content {
        margin: 10px 0;
        color: #222;
        line-height: 1.4;
        font-size: 0.9rem;
    }

    .date {
        font-size: 0.75rem;
        color: #666;
        display: flex;
        align-items: center;
    }

        .date i {
            margin-right: 4px;
            color: #0056B3;
        }

        .date span {
            font-weight: bold;
            color: #333;
        }
    .return-btn {
        color: #fff;
        background: #0056B3;
        border: 1px solid #0056B3;
        padding: 8px 15px;
        border-radius: 50%;
        text-decoration: none;
        float: right;
        box-shadow: 0px 4px 10px 4px rgba(0, 0, 0, 0.50);
        transition: transform 0.2s ease;
    }

        .return-btn:hover {
            transform: translateY(-2px);
        }
</style>

@foreach (var item in Model)
{
    <div class="timeline-item">
        <div class="timeline-header">
            <i class="fas fa-comment"></i>
            <span class="writer-name">@(item.Writer.WriterName + " " + item.Writer.WriterSurname)</span>
        </div>

        <span class="heading">
            <span class="heading-label">Başlık:</span> @item.Heading.HeadingName
        </span>

        <div class="content">
            @item.ContentValue
        </div>

        <div class="date">
            <i class="far fa-calendar"></i>
            <span>@item.ContentDate.ToShortDateString()</span>
        </div>
    </div>
}
<div class="timeline-footer">
    <a href="@Url.Action("Heading", "Users")" class="return-btn">
        <i class="fas fa-arrow-left"></i>
        Return
    </a>
</div>
