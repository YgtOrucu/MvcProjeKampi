@using EntityLayer.Concreate
@model List<Content>

<style>
    .timeline-item {
        background: #b0d6db;
        border-radius: 14px;
        padding: 20px;
        margin-left: 2.5rem;
        box-shadow: 0 10px 24px rgba(0, 0, 0, 0.1);
        transition: transform 0.25s ease, box-shadow 0.25s ease;
    }

        .timeline-item:hover {
            transform: translateY(-4px);
            box-shadow: 0 18px 36px rgba(0, 0, 0, 0.15);
        }

    .timeline-header {
        display: flex;
        align-items: center;
        margin-bottom: 12px;
    }

    .timeline-icon {
        background: #0056b3;
        color: #ffffff;
        border-radius: 50%;
        padding: 10px;
        font-size: 16px;
        margin-right: 12px;
    }

    .writer-name {
        font-weight: 700;
        color: #0b0d2e;
    }

    .heading-name {
        font-weight: 700;
        color: #0056b3;
        margin-bottom: 12px;
    }

        .heading-name span {
            color: #000000;
        }

    .content-text {
        color: #000000;
        margin-bottom: 16px;
        line-height: 1.6;
    }

    .content-date {
        font-size: 13px;
        color: #555555;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .timeline-divider {
        margin: 24px 0;
        border: none;
        border-top: 1px solid #e5e7eb;
    }

    .timeline-footer {
        margin-top: 20px;
        display: flex;
        justify-content: flex-end;
    }

    .return-btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 18px;
        background: #0056b3;
        color: #ffffff;
        border-radius: 999px;
        font-size: 14px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.25s ease;
    }

        .return-btn i {
            font-size: 13px;
        }

        .return-btn:hover {
            background: #003f87;
            transform: translateY(-2px);
            box-shadow: 0 8px 18px rgba(0, 86, 179, 0.35);
        }
</style>

@foreach (var item in Model)
{
    <div class="timeline-item">

        <div class="timeline-header">
            <i class="fas fa-comment timeline-icon"></i>

            <span class="writer-name">
                @($"{item.Writer.WriterName} {item.Writer.WriterSurname}")
            </span>
        </div>

        <div class="heading-name">
            <span>Heading Name:</span> @item.Heading.HeadingName
        </div>

        <div class="content-text">
            @item.ContentValue
        </div>

        <div class="content-date">
            <i class="far fa-calendar"></i>
            <span>@item.ContentDate.ToShortDateString()</span>
        </div>

    </div>

    <hr class="timeline-divider" />
}
<div class="timeline-footer">
    <a href="@Url.Action("Heading", "Users")" class="return-btn">
        <i class="fas fa-arrow-left"></i>
        Return
    </a>
</div>
