@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Users | MVC Camp</title>
    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.4.0/js/all.js" crossorigin="anonymous"></script>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: #f4f6fb;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            background: linear-gradient(180deg, #6f42c1, #4c2ea6);
            color: #fff;
            padding: 30px 20px;
            overflow-y: auto;
        }

            .sidebar::-webkit-scrollbar {
                width: 6px;
            }

            .sidebar::-webkit-scrollbar-thumb {
                background: rgba(255,255,255,.3);
                border-radius: 10px;
            }

        .profile {
            text-align: center;
            margin-bottom: 40px;
        }

            .profile img {
                width: 90px;
                height: 90px;
                border-radius: 50%;
                border: 4px solid rgba(255,255,255,.4);
                margin-bottom: 10px;
            }

            .profile h5 {
                margin: 0;
                font-weight: 600;
            }

        .sidebar a {
            display: block;
            color: #ddd;
            padding: 12px 15px;
            border-radius: 10px;
            margin-bottom: 8px;
            text-decoration: none;
            transition: .2s;
        }

            .sidebar a i {
                margin-right: 10px;
            }

            .sidebar a:hover,
            .sidebar a.active {
                background: rgba(255,255,255,.15);
                color: #fff;
            }

        /* Content */
        .content {
            margin-left: 260px;
            padding: 50px;
        }

        .content-card {
            background: #fff;
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 15px 40px rgba(0,0,0,.08);
        }

            .content-card h2 {
                font-weight: 700;
                margin-bottom: 20px;
            }

        .badge-soft {
            background: rgba(111,66,193,.1);
            color: #6f42c1;
            padding: 6px 14px;
            border-radius: 50px;
            font-size: 13px;
        }

        .timeline-item {
            background: #f9f9f9;
            border-radius: 8px;
            padding: 0.8rem; /* daha az padding */
            margin-left: auto;
            margin-bottom: 4rem; /* kartlar arası mesafe küçültüldü */
            box-shadow: 0 2px 6px rgba(0,0,0,0.08);
            border-left: 4px solid #0056B3;
            transition: transform 0.2s ease;
            max-width: 75%; /* genişliği sınırladık */
        }

            .timeline-item:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 10px rgba(0,0,0,0.12);
            }

        .timeline-header {
            display: flex;
            align-items: center;
            margin-bottom: 0.5rem;
        }

            .timeline-header i {
                background: #0056B3;
                color: #fff;
                border-radius: 50%;
                padding: 6px; /* ikon küçültüldü */
                font-size: 14px;
                margin-right: 0.6rem;
            }

        .writer-name {
            color: #0b0d2e;
            font-weight: bold;
            font-size: 0.9rem; /* yazı boyutu küçültüldü */
        }

        .heading {
            display: block;
            color: #0056B3;
            font-weight: bold;
            margin-bottom: 0.6rem;
            font-size: 1rem;
        }

        .content {
            margin: 10px 0;
            color: #222;
            line-height: 1.4;
            font-size: 0.9rem;
        }

        .date {
            font-size: 0.75rem;
            color: #666;
            display: flex;
            align-items: center;
        }

            .date i {
                margin-right: 4px;
                color: #0056B3;
            }

            .date span {
                font-weight: bold;
                color: #333;
            }
    </style>

</head>
<body>

    <div class="sidebar">
        <div class="profile">    
            <h5>Tüm Başlıklar</h5>
        </div>
        @foreach (var item in Model)
        {
            <a href="~/Users/ContentByHeading/@item.HeadingID">@(item.HeadingName + $" ({item.Count})")</a>
        }
    </div>

    <div class="content">
        <div class="content-card">
            @Html.Action("Content", "Users")
            @{
                var headingId = Request.RequestContext.RouteData.Values["HeadingID"];
            }

            @if (headingId != null)
            {
                @Html.Action("ContentByHeading", "Users", new { id = headingId })
            }
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
