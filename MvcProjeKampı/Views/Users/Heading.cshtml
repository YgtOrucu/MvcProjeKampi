@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Users | MVC Camp</title>
    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.4.0/js/all.js" crossorigin="anonymous"></script>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: #f4f6fb;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            background: linear-gradient(180deg, #6f42c1, #4c2ea6);
            color: #fff;
            padding: 30px 20px;
            overflow-y: auto;
        }

            .sidebar::-webkit-scrollbar {
                width: 6px;
            }

            .sidebar::-webkit-scrollbar-thumb {
                background: rgba(255,255,255,.3);
                border-radius: 10px;
            }

        .profile {
            text-align: center;
            margin-bottom: 40px;
        }

            .profile img {
                width: 90px;
                height: 90px;
                border-radius: 50%;
                border: 4px solid rgba(255,255,255,.4);
                margin-bottom: 10px;
            }

            .profile h5 {
                margin: 0;
                font-weight: 600;
            }

        .sidebar a {
            display: block;
            color: #ddd;
            padding: 12px 15px;
            border-radius: 10px;
            margin-bottom: 8px;
            text-decoration: none;
            transition: .2s;
        }

            .sidebar a i {
                margin-right: 10px;
            }

            .sidebar a:hover,
            .sidebar a.active {
                background: rgba(255,255,255,.15);
                color: #fff;
            }

        /* Content */
        .content {
            margin-left: 260px;
            padding: 50px;
        }

        .content-card {
            background: #fff;
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 15px 40px rgba(0,0,0,.08);
        }

            .content-card h2 {
                font-weight: 700;
                margin-bottom: 20px;
            }

        .badge-soft {
            background: rgba(111,66,193,.1);
            color: #6f42c1;
            padding: 6px 14px;
            border-radius: 50px;
            font-size: 13px;
        }
    </style>

</head>
<body>

    <div class="sidebar">
        <div class="profile">
            <img src="~/AdminThema/AdminLTE-3.0.4/dist/img/user2-160x160.jpg" />
            <h5>Users</h5>
        </div>
        @foreach (var item in Model)
        {
            <a href="~/Users/ContentByHeading/@item.HeadingID">@item.HeadingName</a>
        }
    </div>

    <div class="content">
        <div class="content-card">
            @Html.Action("Content", "Users")
            @{
                var headingId = Request.RequestContext.RouteData.Values["HeadingID"];
            }

            @if (headingId != null)
            {
                @Html.Action("ContentByHeading", "Users", new { id = headingId })
            }
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
