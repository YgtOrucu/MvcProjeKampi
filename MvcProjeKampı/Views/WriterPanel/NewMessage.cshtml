
@{
    ViewBag.Title = "NewMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<!DOCTYPE html>


<section class="content">
    <div class="container-fluid">
        @using (Html.BeginForm("NewMessage", "WriterPanel", FormMethod.Post))
        {
            <div class="row">
                <div class="col-md-3">
                    <a href="~/WriterPanel/WriterMessageSend" class="btn btn-primary btn-block mb-3">Back to Sent</a>
                    @Html.Action("LeftBarArea", "WriterPanel")
                </div>

                <div class="col-md-9">
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h3 class="card-title">New Message</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <input name="ReceiverMail" id="ReceiverMail" class="form-control" placeholder="To:">
                            </div>
                            <div class="form-group">
                                <input name="MessageSubject" id="MessageSubject" class="form-control" placeholder="Subject:">
                            </div>
                            <div class="form-group">
                                <textarea name="MessageContent" id="compose-textarea" class="form-control" style="height: 300px"> </textarea>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="float-right">
                                <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Send</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</section>


