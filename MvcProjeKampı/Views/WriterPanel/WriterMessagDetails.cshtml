@model EntityLayer.Concreate.Message
@{
    ViewBag.Title = "WriterMessagDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
    string mail = Session["WriterMail"].ToString();
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3">
                    @if (Model.SenderMail == mail)
                    {
                        <a href="~/WriterPanel/WriterMessageSend" class="btn btn-primary btn-block mb-3">Back to Sent</a>
                    }
                    else
                    {
                        <a href="~/WriterPanel/WriterMessageInbox" class="btn btn-primary btn-block mb-3">Back to Inbox</a>
                    }
                    @Html.Action("LeftBarArea", "WriterPanel")
                </div>
                <div class="col-md-9">
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h3 class="card-title">Read Mail</h3>
                        </div>
                        <div class="card-body p-0">
                            <div class="mailbox-read-info">
                                <h5 style="font-weight:bolder">@Model.MessageSubject</h5>
                                <br />
                                <h6>
                                    From: @Model.SenderMail
                                    <br /><br />
                                    To: @Model.ReceiverMail
                                    <span class="mailbox-read-time float-right">@Model.MessageDate.ToString("dd MMM. yyyy")</span>
                                </h6>
                            </div>
                            <div class="mailbox-read-message">
                                @Model.MessageContent
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>


